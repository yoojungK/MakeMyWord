<?xml version="1.0" encoding="utf-8"?>
<neural.imagerecognizer.app.ui.views.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="150dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:id="@+id/imageView1" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="New Text"
            android:textColor="#000000"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginBottom="63dp"
            android:gravity="center"
            android:text="New Text"
            android:textColor="#666666"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox1"
            android:focusable="false"
            android:clickable="false"
            android:layout_weight="1" />

        <Button
            android:id="@+id/playbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/playbtn" />
    </LinearLayout>
</neural.imagerecognizer.app.ui.views.CheckableLinearLayout>